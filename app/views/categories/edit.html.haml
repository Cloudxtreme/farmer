.panel.panel-default
  .panel-heading
    %h4.panel-title
      .btn-group
        %a.btn.btn-primary{ href: category_path( @category ) }
          %span.glyphicon.glyphicon-chevron-left
        %a.btn.btn-default{ href: "#" }
          %b= "Editing #{@category.name}"
        %a.btn.btn-danger{ href: category_path( @category ), rel: 'nofollow', :'data-method' => 'delete', :'data-confirm' => 'Are you sure?' }
          %span.glyphicon.glyphicon-trash

= render 'form'
