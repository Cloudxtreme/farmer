.modelform
  = form_for @rack_mount do |f|
    - if @rack_mount.errors.any?
      #error_explanation
        %h2= "#{pluralize(@rack_mount.errors.count, "error")} prohibited this rack_mount from being saved:"
        %ul
          - @rack_mount.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :location
      = f.select :location_id, options_from_collection_for_select( @locations, 'id', 'name', @rack_mount.location.nil? ? '' : @rack_mount.location.id )
    .field
      = f.label :position
      = f.text_field :position
    .actions
      = f.submit 'Save'
